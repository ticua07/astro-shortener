---
import Layout from "../layouts/Layout.astro";
---

<Layout
  noFooter={true}
  title="Astro shortener. - Shorten links with custom slugs"
>
  <main
    class="w-full h-full text-white flex flex-col items-center pt-12 gap-4 px-2"
  >
    <section class="flex flex-col gap-4 mb-12">
      <h1 class="text-5xl sm:text-6xl text-center">Astro shortener ðŸš€</h1>
      <h2 class="text-xl sm:text-2xl opacity-80 text-center">
        Shorten your links, made with Astro and Svelte
      </h2>
    </section>
    <section class="flex flex-col gap-16 items-center">
      <article
        class="flex sm:flex-row flex-col gap-2 rounded p-8 xl:px-32 md:px-16 px-0 w-[80%] justify-center xl:items-start items-center"
      >
        <div class="flex flex-col gap-3 w-full md:w-2/5">
          <h1 class="text-4xl">Sign in</h1>
          <h2 class="text-2xl text-pretty opacity-80">
            Create your account using the Github integration. Go to your
            dashboard containing your links
          </h2>
        </div>
        <img
          alt="Github's OAuth sign in page"
          src="/signin.png"
          class="sm:w-1/2 xl:w-1/3 h-auto"
        />
      </article>

      <article
        class="flex sm:flex-row flex-col gap-2 rounded p-8 xl:px-32 md:px-12 px-0 w-[80%] justify-center xl:items-start items-center"
      >
        <div class="flex flex-col gap-3 w-full md:w-2/5">
          <h1 class="text-4xl">Add your links</h1>
          <h2 class="text-2xl text-pretty opacity-80">
            After creating your account, add your custom links
          </h2>
        </div>
        <img
          alt="Formulary to add links"
          src="/addyourlinks.png"
          class="sm:w-1/2 xl:w-1/3 h-auto"
        />
      </article>
    </section>
  </main>
</Layout>
